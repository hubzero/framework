namespace Components\%=component_name+ucf=%\Admin\Controllers;

use Hubzero\Component\AdminController;

/**
 * Controller class for %=component_name=%
 */
class %=component_name+ucf=% extends AdminController
{
	/**
	 * Display primary page
	 *
	 * @return  void
	 */
	public function displayTask()
	{
		// Set any errors
		foreach ($this->getErrors() as $error)
		{
			$this->view->setError($error);
		}

		// Output the HTML
		$this->view->display();
	}
}
